<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhupeng.baseframe.mapper.SysRoleMapper">

	<select id="queryObject" resultType="com.zhupeng.baseframe.entity.SysRole">
		select * from sys_role where role_id = #{value}
	</select>

	<insert id="save" parameterType="com.zhupeng.baseframe.entity.SysRole" useGeneratedKeys="true" keyProperty="roleId">
		insert into sys_role
		(
			`role_id`, 
			`role_name`, 
			`remark`,
			`create_user_id`,
			`create_time`,
			`role_type`
		)
		values
		(
			#{roleId}, 
			#{roleName}, 
			#{remark},
			#{createUserId},
			#{createTime},
			#{roleType}
		)
	</insert>
	 
	<update id="update" parameterType="com.zhupeng.baseframe.entity.SysRole">
		update sys_role 
		<set> 
			<if test="roleName != null">`role_name` = #{roleName}, </if>
			<if test="remark != null">`remark` = #{remark},</if>
			<if test="roleType != null">`role_type` = #{roleType}</if>
		</set>
		where role_id = #{roleId}
	</update>
	
	<delete id="deleteBatch">
		delete from sys_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from sys_role_menu where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from sys_user_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
	</delete>
	
	<!-- 查询用户创建的角色ID列表 -->
	<select id="queryRoleIdList" resultType="long">
		select role_id from sys_role where create_user_id = #{createUserId} 
	</select> 
</mapper>